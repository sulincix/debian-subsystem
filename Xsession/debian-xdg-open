#!/bin/bash
source /usr/lib/sulin/dsl/variable.sh
if [[ ! -f ${DESTDIR}/etc/os-release ]] ; then
    if [[ -f /usr/bin/d-term ]] ; then
        /usr/bin/d-term pkexec /usr/lib/sulin/dsl/dsl.sh
    else
        xterm -e "pkexec /usr/lib/sulin/dsl/dsl.sh true"
    fi
fi
for arg in "$@" ; do
    curdir=$(pwd)
    file="$(realpath $arg)"
    if ! ls "$file" &>/dev/null ; then
        echo "File $file not found"
    else
        cd /usr/lib/sulin/dsl
        pkexec /usr/lib/sulin/dsl/dsl.sh --xdg "/system/$file"
    fi
done

#!/bin/bash
[[ -f /var/debian/etc/os-release ]] && hostctl &
if [[ -f /var/debian/etc/alternatives/x-session-manager ]] ; then
    exec pkexec /usr/lib/sulin/dsl/dsl.sh /etc/X11/Xsession
elif [[ -f /usr/bin/d-term ]] ; then
    exec /usr/bin/d-term pkexec /usr/lib/sulin/dsl/dsl.sh
else
    exec xterm -e "pkexec /usr/lib/sulin/dsl/dsl.sh"
fi
